{
  "name": "ng-library-schematics",
  "version": "0.0.1",
  "scripts": {
    "ng": "ng",
    "start": "ng serve sandbox",
    "build": "ng build sandbox",
    "link:lib": "cd dist/aboudard/ng-lib && npm link",
    "link:app": "cd projects/sandbox && npm link @aboudard/ng-lib",
    "link:all": "npm run link:lib && npm run link:app",
    "link:rm": "npm rm -g @aboudard/ng-lib",
    "sandbox:ng-add": "cd projects/sandbox && ng g @aboudard/ng-lib:ng-add",
    "clean:sandbox": "git checkout HEAD -- projects/sandbox && git clean -f -d projects/sandbox",
    "build:lib": "ng build @aboudard/ng-lib",
    "build:schematics": "tsc -p projects/aboudard/ng-lib/tsconfig.schematics.json",
    "build:sass": "sass projects/aboudard/ng-lib/styles/styles.scss projects/aboudard/ng-lib/assets/styles.css",
    "postbuild:schematics": "copyfiles projects/aboudard/ng-lib/schematics/migrations.json projects/aboudard/ng-lib/schematics/collection.json dist/aboudard/ng-lib/schematics/ -f",
    "build:all": "npm run build:lib && npm run build:schematics && npm run build:sass",
    "pack:lib": "cd dist/aboudard/ng-lib && npm pack",
    "lib:all": "npm run build:all && npm run pack:lib",
    "publish:all": "npm run lib:all && npm publish dist/aboudard/ng-lib",
    "publish:local": "npm run lib:all && npm publish dist/aboudard/ng-lib --registry http://localhost:4873",
    "watch": "ng build --watch --configuration development",
    "test": "ng test"
  },
  "private": true,
  "dependencies": {
    "@angular-devkit/core": "^13.2.5",
    "@angular-devkit/schematics": "^13.2.5",
    "@angular/animations": "~13.2.4",
    "@angular/common": "~13.2.4",
    "@angular/compiler": "~13.2.4",
    "@angular/core": "~13.2.4",
    "@angular/forms": "~13.2.4",
    "@angular/platform-browser": "~13.2.4",
    "@angular/platform-browser-dynamic": "~13.2.4",
    "@angular/router": "~13.2.4",
    "rxjs": "~7.5.0",
    "tslib": "^2.3.0",
    "zone.js": "~0.11.4"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "~13.2.5",
    "@angular/cli": "~13.2.5",
    "@angular/compiler-cli": "~13.2.4",
    "@types/jasmine": "~3.10.0",
    "@types/node": "^12.11.1",
    "copyfiles": "^2.4.1",
    "jasmine-core": "~4.0.0",
    "karma": "~6.3.0",
    "karma-chrome-launcher": "~3.1.0",
    "karma-coverage": "~2.1.0",
    "karma-jasmine": "~4.0.0",
    "karma-jasmine-html-reporter": "~1.7.0",
    "ng-packagr": "^13.0.0",
    "sass": "^1.49.8",
    "typescript": "~4.5.2"
  }
}
